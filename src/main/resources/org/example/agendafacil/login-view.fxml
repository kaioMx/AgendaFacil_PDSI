<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="450.0" prefWidth="337.0" stylesheets="@style/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.agendafacil.LoginController">

    <!-- Fundo simples (performático) -->
    <children>

        <!-- Card de login -->
        <VBox alignment="CENTER" prefHeight="385.0" prefWidth="297.0" style="-fx-background-color: #61a1f1#61a1f1#61a1f1; -fx-background-radius: 20;" styleClass="card" StackPane.alignment="CENTER">
            <ImageView fitHeight="108.0" fitWidth="231.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@imagens/logo.png" />
                </image>
            </ImageView>
            <Label prefHeight="34.0" prefWidth="138.0" styleClass="subtitle" text="Bem vindo!!" textFill="#fafafa">
                <font>
                    <Font name="Nirmala UI Bold" size="24.0" />
                </font></Label>

            <VBox prefHeight="268.0" prefWidth="406.0" spacing="12" styleClass="form">
                <Label styleClass="label" text="E-mail" />
                <TextField fx:id="emailField" prefHeight="40.0" prefWidth="291.0" promptText="voce@exemplo.com">
                    <VBox.margin>
                        <Insets right="60.0" />
                    </VBox.margin></TextField>

                <Label styleClass="label" text="Senha" />
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <PasswordField fx:id="passwordField" promptText="••••••••" HBox.hgrow="ALWAYS" />
                    <ToggleButton fx:id="showPassToggle" mnemonicParsing="true" styleClass="text-btn" text="Mostrar" />
                </HBox>

                <HBox alignment="CENTER" spacing="8">
                    <CheckBox fx:id="rememberMe" text="Lembrar de mim" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Hyperlink fx:id="forgotLink" focusTraversable="false" text="Esqueci a senha" />
                </HBox>
            <HBox prefHeight="50.0" prefWidth="227.0">
               <children>
      
                      <Button alignment="CENTER" prefHeight="38.0" prefWidth="299.0" style="-fx-background-color: #7B3FF3; -fx-cursor: hand;" onAction="#login" text="Entrar" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Nirmala UI" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="100.0" right="100.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>

                <!-- Feedback enxuto para status/erros -->
                <Label fx:id="statusLabel" managed="false" styleClass="status" visible="false" />
            </VBox>
        </VBox>
    </children>
</StackPane>
